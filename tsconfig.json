{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@nestjs/sequelize": ["node_modules/@nestjs/sequelize"],
      "dotenv": ["node_modules/dotenv"],
      "sequelize-typescript": ["node_modules/sequelize-typescript"]
    }
  }
}
